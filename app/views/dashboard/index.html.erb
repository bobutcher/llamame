<blockquote><em>[ Llama fact here ]</em></blockquote>

<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <button type="button" class="btn btn-default btn-lg btn-block" id="upcoming-followups-btn">
      <div class="button-content">
        <h1>X</h1>
        <p>Followups Needed</p>
      </div>
    </button>
  </div>

  <div class="col-md-3">
    <button type="button" class="btn btn-default btn-lg btn-block" id="recent-interactions-btn">
      <div class="button-content">
        <h1>X</h1>
        <p>Recent Interactions</p>
      </div>
    </button>
  </div>
</div>


<div class="panel panel-primary" id="upcoming-followups">
  <div class="panel-heading"><h4>Followups Needed</h4></div>

  <table class="table">
    <thead>
      <tr>
        <th>Topic</th>
        <th>Follow Up Date</th>
        <th>Method</th>
        <th>Contact</th>
    </tr>
      <tbody></tbody>
    </thead>
  </table>
</div>

<div class="panel panel-primary" id="recent-interactions">
  <div class="panel-heading"><h4>Recent Interactions</h4></div>
  <div class="panel-body">

    <table class="table">
      <thead>
        <tr>
          <th>Topic</th>
          <th>Last Update</th>
          <th>Method</th>
          <th>Follow Up With</th>
      </tr>
        <tbody>
          <% @recents.each do |interaction| %>
            <tr>
              <td><%= link_to interaction.topic, interaction %></td>
              <td>
                  <%= interaction.updated_at.strftime("%a, %m/%d") %><br>
                  <%= interaction.updated_at.strftime("%I:%M %p") %>
              </td>
              <td><div class="medium-icon"><%= icon_type(interaction.medium) %></div></td>
              <td>Person</td>
            </tr>
          <% end %>
        </tbody>
      </thead>
    </table>

  </div>
</div>
